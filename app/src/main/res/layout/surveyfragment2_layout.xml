<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    tools:context="com.example.aalam.dashboardapp.SurveyActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have you experienced symptoms of endometrosis in the past 3 months"
        fontPath="fonts/HelveticaNeueThin.ttf"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="30dp"

        android:layout_weight="0"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptoms can include painful periods, painful throughout your cycle "
        fontPath="fonts/HelveticaNeueThin.ttf"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingLeft="30dp"

        android:layout_weight="0"
        android:paddingBottom="20dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <ListView
        android:id="@+id/surveyFragmentList2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:textColor="@drawable/list_selector"
        android:duplicateParentState="true"
        android:layout_marginTop="5dp"

        android:layout_weight="0"
        android:divider="#c0c0c0"
        android:dividerHeight="1.0sp"
        android:choiceMode="singleChoice">
        >
    </ListView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center|bottom"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="140dp"
        >
        <Button
            android:id="@+id/newFragmentButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal|center"
            android:textColor="@color/materialWhite"
            android:background="@drawable/button_click"
            android:backgroundTint="@color/black"
            />
        </LinearLayout>

</LinearLayout>