<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:orientation="vertical"
tools:ignore="MissingPrefix"
android:paddingTop="30dp"
tools:context="com.example.aalam.dashboardapp.SurveyActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Have you experienced symptoms of endometrosis in the past 3 months"
    fontPath="fonts/HelveticaNeueThin.ttf"
    android:gravity="center"
    android:textSize="30dp"
    android:padding="30dp"
    android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptoms can include painful periods, painful throughout your cycle "
        fontPath="fonts/HelveticaNeueThin.ttf"
        android:gravity="center"
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:paddingBottom="20dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
<ListView
    android:id="@+id/surveyList2"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:textColor="@drawable/list_selector"
    android:duplicateParentState="true"
    android:layout_marginTop="5dp"
    android:divider="#c0c0c0"
    android:dividerHeight="1.0sp"
    android:choiceMode="singleChoice">
    >
</ListView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/></LinearLayout>